        {
            "type": "node",//配置类型
            "request": "launch",//请求配置类型，不太懂
            "name": " node Launch Program",//名字，即在调试菜单栏里显示的名字
            "console": "integratedTerminal",
            //这里是可以选择使用哪个控制台来调试，
            //推荐使用上面这个
            //“integratedConsole”不可以进行输入，当遇到readline函数或者是readline.on函数时将无法输入
            "program": "${file}",//当前打开的文件
            "sourceMaps": true//可以将压缩文件的代码映射回到源代码
        }

    ]
}